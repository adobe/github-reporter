<%@ val pulls: Seq[com.adobe.tools.github.PullRequest] %>
<%@ val heading: String %>
<%@ val htmlMode: Boolean %>
<%
    val H1 = "#"
    val H3 = "#" * 3
%>
#if (pulls.nonEmpty)
${H3} ${heading}:
<%
    for (i <- pulls)
    if (htmlMode) {
%>
* ${i.title} [${H1}${i.id.toString}](${i.url})([${i.creator}] (${i.url}))
<% } else {%>
    * ${H1}${i.id.toString} - ${i.title} (${i.creator})
<%}%>
#end